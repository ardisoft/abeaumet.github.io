source "https://rubygems.org"

##################
# Mandatory gems #
##################

gem 'jekyll'
gem 'jekyll-tagging', :git => 'https://github.com/pakerfeldt/jekyll-tagging.git'
gem 'sass'

#################
# Optional gems #
#################

# Development tools purpose
group :development do
  gem 'webrick'         # Run a small HTTP server
end

# Increase blog generation speed
group :performance do
  gem 'gsl'             # Jekyll latent semantic indexing
  gem 'rb-fsevent'      # SASS
end
